<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp">

    <TextView
            android:text="Copying files: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bottom_sheet_text"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:textSize="16sp"/>
    <ProgressBar
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/bottom_sheet_progressBar"
            android:layout_below="@id/bottom_sheet_text"
            android:layout_marginTop="15dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bottom_sheet_process"
            android:layout_below="@id/bottom_sheet_progressBar"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp"/>
    <TextView
            android:text="Hide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bottom_sheet_hide"
            android:layout_below="@id/bottom_sheet_progressBar"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:textSize="18sp"
            android:padding="5dp"
            android:textColor="@color/c_06" android:layout_marginBottom="10dp"/>
</RelativeLayout>
